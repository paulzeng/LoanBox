<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_large"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:src="@drawable/icon_default_head"/>

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18674603230"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_below="@id/iv_head"              android:textColor="@color/main_text_color"
                android:textSize="@dimen/tv_size_normal"/>



        </RelativeLayout>

        <include layout="@layout/layout_divider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_normal"
                android:drawableLeft="@drawable/icon_tuijian"
                android:drawablePadding="@dimen/margin_normal"
                android:gravity="center"
                android:text="推荐有礼活动"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/tv_size_normal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_normal"
                android:src="@drawable/icon_right_arrow"/>

        </RelativeLayout>

        <include layout="@layout/layout_divider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="11dp"
                android:drawableLeft="@drawable/icon_message"
                android:drawablePadding="@dimen/margin_normal"
                android:gravity="center"
                android:text="我的消息"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/tv_size_normal"
                android:layout_alignTop="@+id/imageView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="11dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_normal"
                android:src="@drawable/icon_right_arrow"
                android:id="@+id/imageView" />

        </RelativeLayout>

        <include layout="@layout/layout_divider"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_normal"
                android:drawableLeft="@drawable/icon_collection"
                android:drawablePadding="@dimen/margin_normal"
                android:gravity="center"
                android:text="我的收藏"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/tv_size_normal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_normal"
                android:src="@drawable/icon_right_arrow"/>

        </RelativeLayout>

        <include layout="@layout/layout_divider"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_normal"
                android:drawableLeft="@drawable/icon_record"
                android:drawablePadding="@dimen/margin_normal"
                android:gravity="center"
                android:text="申请记录"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/tv_size_normal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_normal"
                android:src="@drawable/icon_right_arrow"/>

        </RelativeLayout>

        <include layout="@layout/layout_divider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_normal"
                android:drawableLeft="@drawable/icon_conract"
                android:drawablePadding="@dimen/margin_normal"
                android:gravity="center"
                android:text="联系我们"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/tv_size_normal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_normal"
                android:src="@drawable/icon_right_arrow"/>

        </RelativeLayout>

        <include layout="@layout/layout_divider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_normal"
                android:drawableLeft="@drawable/icon_about"
                android:drawablePadding="@dimen/margin_normal"
                android:gravity="center"
                android:text="关于我们"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/tv_size_normal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_normal"
                android:src="@drawable/icon_right_arrow"/>

        </RelativeLayout>

        <include layout="@layout/layout_divider"/>
    </LinearLayout>

</ScrollView>